#
# ~/.bashrc
#

# If not running interactively, don't do anything
[[ $- != *i* ]] && return

PS1="\[\033[0;32m\]\W âžŸ \[\033[0m\]"

new_line_flag=0
function set_new_line() {
    if [ "$new_line_flag" -eq 1 ]; then
        echo "" # leave empty line
    else
        new_line_flag=1
    fi
}
PROMPT_COMMAND=set_new_line

